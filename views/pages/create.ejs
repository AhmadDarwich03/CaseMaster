<%- include('../partials/header.ejs') %>

<section>
    <h2>Create a New Ticket</h2>
    <form action="/create" method="POST" enctype="multipart/form-data">
        <label for="problem">Problem</label>
        <input type="text" id="problem" name="problem" required>

        <label>Description</label>
        <textarea name="description" rows="4" required></textarea>

        <label for="department">Choose Department</label>
        <select name="department" id="department" required>
            <option value="Teknisk Supportcenter">Teknisk Supportcenter</option>
            <option value="IT Support Services">IT Support Services</option>
            <option value="other">Other</option>
        </select>

        <label for="attachment">Attach a Picture or Document</label>
        <input type="file" id="attachment" name="attachment" accept=".jpg,.jpeg,.png,.pdf,.doc,.docx">

        <button type="submit">Create Ticket</button>
    </form>
</section>

