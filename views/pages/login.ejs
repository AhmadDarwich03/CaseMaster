<%- include('./../partials/header.ejs') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        /* Center the form properly */
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #121212; /* Dark background */
        }

        .container {
            max-width: 400px;
            background-color: rgba(0, 0, 0, 0.8); /* Dark background for the form */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3); /* Add shadow */
            width: 100%;
        }

        h2.loginh2 {
            color: white; /* Make the header white */
            text-align: center;
            margin-bottom: 20px;
        }

        label {
            color: white; /* Make labels white */
        }

        input[type="text"], 
        input[type="password"] {
            color: white; /* Make input text white */
            background-color: #333; /* Optional: Darker background for better contrast */
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 5px;
            width: 100%; /* Make inputs take full width */
            margin-bottom: 10px;
        }

        button {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 12px 20px;
            font-size: 16px;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
            width: 100%;
            margin-top: 10px;
        }

        button:hover {
            background-color: #218838;
            transform: scale(1.05); /* Hover effect */
        }

        .error-message {
            color: red;
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2 class="loginh2">Login</h2>
        <form action="/login" method="POST">
            <div class="input-box">
                <label for="username">Username or Email</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="input-box">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit">Login</button>
            <% if (message) { %>
                <p class="error-message"><%= message %></p>
            <% } %>
        </form>
    </div>
</body>

