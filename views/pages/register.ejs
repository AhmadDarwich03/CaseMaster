<%- include('./../partials/header.ejs') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        /* Inline styles for white text */
        label {
            color: white; /* Make labels white */
        }
        input[type="text"], 
        input[type="email"], 
        input[type="password"], 
        select {
            color: white; /* Make input text white */
            background-color: #333; /* Optional: Darker background for better contrast */
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 5px;
        }
        select option {
            color: black; /* Optional: Make dropdown options black */
            background-color: #fff; /* Background for dropdown options */
        }
    </style>
</head>

<body>
    <div class="container">
        <form action="/register" method="POST">
            <div class="input-box">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="input-box">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="input-box">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="input-box">
                <label for="role">Choose Role</label>
                <select name="role" id="role" required>
                    <option value="">Select Role</option>
                    <option value="agent">Agent</option>
                    <option value="user">User</option>
                </select>
            </div>
            <button type="submit">Register</button>
            <% if (typeof message !== 'undefined' && message) { %>
                <p class="error-message"><%= message %></p>
            <% } %>            
        </form>
    </div>
</body>

<%- include('./../partials/footer.ejs') %>
