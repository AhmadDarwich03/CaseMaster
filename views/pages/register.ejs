<%- include('./../partials/header.ejs') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        /* Inline styles for white text */
        label {
            color: white; /* Make labels white */
        }
        input[type="text"], 
        input[type="email"], 
        input[type="password"], 
        select {
            color: white; /* Make input text white */
            background-color: #333; /* Optional: Darker background for better contrast */
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 5px;
            width: 100%; /* Full width */
        }
        select option {
            color: black; /* Optional: Make dropdown options black */
            background-color: #fff; /* Background for dropdown options */
        }
        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Make the container fill the full height */
        }
        form {
            background-color: rgba(0, 0, 0, 0.8); /* Dark background for the form */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3); /* Add shadow */
            max-width: 400px; /* Limit form width */
            width: 100%; /* Ensure form takes full width */
        }
        button {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 12px 20px;
            font-size: 16px;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
            width: 100%;
            margin-top: 10px;
        }
        button:hover {
            background-color: #218838;
            transform: scale(1.05); /* Hover effect */
        }
        .error-message {
            color: red;
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <form action="/register" method="POST">
            <div class="input-box">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="input-box">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="input-box">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="input-box">
                <label for="role">Choose Role</label>
                <select name="role" id="role" required>
                    <option value="">Select Role</option>
                    <option value="agent">Agent</option>
                    <option value="user">User</option>
                </select>
            </div>
            <button type="submit">Register</button>
            <% if (typeof message !== 'undefined' && message) { %>
                <p class="error-message"><%= message %></p>
            <% } %>            
        </form>
    </div>
</body>

<%- include('./../partials/footer.ejs') %>
