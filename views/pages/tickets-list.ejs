<%- include('./../partials/header.ejs') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticketing System</title>
    <link rel="stylesheet" href="/css/styles.css"> 
</head>
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <header>
        <h1>All Tickets</h1>
        <nav>
            <a href="/create">Create a new ticket</a>
        </nav>
    </header>
    <main>
        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Problem</th>
                    <th>Description</th>
                    <th>Timestamp</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% if (allTickets.length > 0) { %>
                    <% allTickets.forEach(ticket => { %>
                        <tr>
                            <td><%= ticket.id %></td>
                            <td><%= ticket.problem %></td>
                            <td><%= ticket.description %></td>
                            <td><%= new Date(ticket.tid).toLocaleString() %></td>
                            <td><%= ticket.status %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6">No tickets found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </main>
</body>
</html>
